<h1>This is the Admin Page!</h1>
<h2><%= current_user.email %></h2>

<%= link_to 'Log Out', destroy_user_session_path, data: { turbo_method: :delete } %>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <%= link_to 'Edit' %>
          <%= link_to 'Show', admin_user_path(user) %>
          <%= link_to 'Delete' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
